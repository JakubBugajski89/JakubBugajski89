let x = prompt("Podaj liczbę pierwszą");
let y = prompt("Podaj liczbę drugą");
let z = prompt("Podaj liczbę trzecią");

let liczba1 = x;
let liczba2 = y;
let liczba3 = z;

const max = Math.max(x, y, z);
const min = Math.min(x, y, z);
const mid = liczba1 + liczba2 + liczba3 - max - min;

console.log(`Liczba największa, to: ${max}`);
console.log(`Liczba środkowa, to: ${mid}`);
console.log(`Liczba najmniejsza, to: ${min}`);

const average = max + min;
console.log(`Średnia arytmetyczna największej i najmniejszej liczby jest równa: ${average}`);

if(mid > average) {
    console.log("Środkowa liczba jest większa, niż suma liczby największej i najmniejszej");
}
else {
    console.log("Środkowa liczba nie jest większa, niż suma liczby największej i najmniejszej");
}
